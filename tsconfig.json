{
  "compilerOptions": {
    "allowJs": true, // 允许编译javascript文件。
    "allowSyntheticDefaultImports": true, // 允许从没有设置 默认导出 的模块中 默认导入
    "allowUnreachableCode": false, // 不报告执行不到的代码错误。
    "allowUnusedLabels": false, // 不报告未使用的标签错误。
    "alwaysStrict": false, // 以严格模式解析并为每个源文件生成 "use strict"语句
    "baseUrl": ".",  // 解析非相对模块名的基准目录。查看 模块解析文档了解详情。
    "charset": "utf8",  // 输入文件的字符集。
    "checkJs": false, // 在 .js文件中报告错误。与 --allowJs配合使用。
    "declaration": false, // 生成相应的 .d.ts文件。
    // "declarationDir": null, // 生成声明文件的输出路径。
    "outDir": "./dist",
    "experimentalDecorators": true, // 启用实验性的ES装饰器
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "watch": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "module": "esNext",
    "target": "ES5",
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015"
    ],

    // "paths": {
    //   "components/*": ["src/components/*"]
    // },
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "src/__tests__",
    "src/runner.ts",
    "example"
]
}